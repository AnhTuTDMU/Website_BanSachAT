@model IEnumerable<Website_BanSachAT.Models.Slide>

<div id="carousel1" class="carousel slide">
    <ol class="carousel-indicators">
        @{
            int i = 0;

            foreach (var item in Model)
            {
                if (i == 0)
                {
                    <li data-target="#carousel1" data-slide-to="0" class="active"> </li>
                }
                else
                {
                    <li data-target="#carousel1" data-slide-to="@item" class="active"> </li>
                }
            }
            i++;
        }
    </ol>
    <div class="carousel-inner">
        @{
            int j = 0;
            foreach (var item in Model)
            {
                if (j == 0)
                {
                    <div class="item active">
                        <img class="img-responsive" src="~/Images/Slider/@item.Anh" alt="thumb">
                        <div class="carousel-caption"> @item.TieuDe </div>
                    </div>
                }
                else
                {
                    <div class="item">
                        <img class="img-responsive" src="~/Images/Slider/@item.Anh" alt="">
                        <div class="carousel-caption"> @item.TieuDe </div>
                    </div>
                }
                j++;
            }
        }
    </div>
    <a class="left carousel-control" href="#carousel1" data-slide="prev"><span class="icon- prev"></span></a>
    <a class="right carousel-control" href="#carousel1" data-slide="next"><span class="icon-next"></span></a>
</div>
